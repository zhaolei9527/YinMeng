<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/fanhui" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="提现管理"
            android:textColor="@color/text000"
            android:textSize="@dimen/x16" />

        <TextView
            android:id="@+id/tv_tixianzhanghu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:text="提现账户"
            android:textColor="@color/text333"
            android:textSize="@dimen/x16" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="@dimen/x295"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x15"
        android:background="@color/bgfff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现账户"
                android:textColor="@color/text333"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_zhanghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:textColor="#3C5282"
                android:textSize="@dimen/x15" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x10"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现金额"
                android:textColor="@color/text333"
                android:textSize="@dimen/x15" />

            <EditText
                android:id="@+id/et_jine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y40"
                android:layout_marginTop="@dimen/x15"
                android:background="@null"
                android:hint="请输入提现金额"
                android:inputType="numberDecimal"
                android:textColor="@color/text333"
                android:textSize="@dimen/x15" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="#dddddd"></View>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ketixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_zuiditixian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textColor="#888888"
                android:textSize="@dimen/x13" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x13"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_yitixian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#888888"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_tixianjilu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="提现记录"
                android:textColor="#0083FF"
                android:textSize="@dimen/x15" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/x299"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginTop="@dimen/x40"
        android:background="@drawable/btn_add_address_selector"
        android:text="立即提现"
        android:textColor="#fff"
        android:textSize="@dimen/x15" />

</LinearLayout>
