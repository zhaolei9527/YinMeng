<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_orderIlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView"
            android:layout_width="@dimen/x84"
            android:layout_height="@dimen/x84"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y90"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y12"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="#333333"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_classify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/y90"
            android:textColor="#F0667F"
            android:textSize="@dimen/x17" />


        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x143"
            android:layout_marginRight="@dimen/x10"
            android:text="Ã—2"
            android:textColor="#999999"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_size"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/x143"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:maxLength="9"
            android:maxLines="1"
            android:textColor="#999999"
            android:textSize="@dimen/x11" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#cccccc"></View>

    </RelativeLayout>

</LinearLayout>