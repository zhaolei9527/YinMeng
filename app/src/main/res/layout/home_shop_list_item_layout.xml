<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/x2">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/SimpleDraweeView"
        fresco:roundedCornerRadius="10dp"
        fresco:roundTopLeft="true"
        fresco:roundTopRight="true"
        fresco:roundBottomLeft="true"
        fresco:roundBottomRight="true"
        android:layout_width="@dimen/x125"
        android:layout_height="@dimen/y104"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/x2">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="瑞银信智能机云闪付"
            android:textColor="@color/text333"
            android:textSize="@dimen/x15" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_yikahui_type"
                android:padding="@dimen/x3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="刷卡费率" />

                <TextView
                    android:id="@+id/tv_feilv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.55%"
                    android:textColor="#0084FF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x15"
                android:background="@drawable/bg_yikahui_type"
                android:padding="@dimen/x3">

                <TextView
                    android:id="@+id/tv_yajin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="押金100"
                    android:textColor="#0084FF" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x5"
            android:background="@drawable/bg_yikahui_type"
            android:padding="@dimen/x3">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推广奖励" />

            <TextView
                android:id="@+id/tv_jiangli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80元"
                android:textColor="#0084FF" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/x3"
                android:text="￥280.00"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/tv_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:text="1200人已关注"
                android:textColor="@color/text666" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_paizhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x10"
            android:padding="@dimen/x3"
            android:text="支付牌照：瑞银信智能机"
            android:textColor="@color/text666" />


    </LinearLayout>

</LinearLayout>
