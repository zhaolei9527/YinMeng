<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x42"
            android:background="@color/bgfff"
            android:visibility="visible">

            <FrameLayout
                android:id="@+id/rl_back"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/x30"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/fanhui" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="机具绑定"
                android:textColor="@color/text000"
                android:textSize="@dimen/x16" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:background="@color/bgddd"></View>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:text="请选择品牌"
            android:textColor="@color/text333"
            android:textSize="@dimen/x15" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <com.yinmeng.View.WenguoyiRecycleView
                android:id="@+id/rv_jiju_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginTop="@dimen/x10"></com.yinmeng.View.WenguoyiRecycleView>

            <include layout="@layout/layout_empty"></include>

        </FrameLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_keshi_lable_check">

            <EditText
                android:id="@+id/et_sn"
                android:layout_width="@dimen/x220"
                android:layout_height="@dimen/y15"
                android:layout_margin="@dimen/x10"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入SN号或机器编码"
                android:textSize="@dimen/x12" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/bg_keshi_lable_check">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="@dimen/x220"
                android:layout_height="@dimen/y15"
                android:layout_margin="@dimen/x10"
                android:background="@null"
                android:gravity="center"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textSize="@dimen/x12" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/y30"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/bg_login"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/bgfff"
            android:textSize="@dimen/x15" />

    </LinearLayout>


</ScrollView>
