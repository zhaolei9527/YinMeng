<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/x2">

    <LinearLayout
        android:id="@+id/ll_yiji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y33"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="一级"
            android:textColor="@color/text333"
            android:textSize="@dimen/x13" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:text="Class A"
            android:textColor="@color/text666"
            android:textSize="@dimen/x13" />

        <TextView
            android:id="@+id/tv_yijirenshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:gravity="end"
            android:text="0人"
            android:textColor="@color/textred"
            android:textSize="@dimen/x16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y91"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/SimpleDraweeView"
            android:layout_width="@dimen/x85"
            android:layout_height="@dimen/x85"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/x2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:text="姓名："
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text=""
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:text="电话："
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text=""
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:text="当天推广人数："
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/tv_dayxinzeng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text="0"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/x3"
                    android:text="推荐人数："
                    android:textColor="@color/text666"
                    android:textSize="@dimen/x12" />

                <TextView
                    android:id="@+id/tv_zonrenshu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x10"
                    android:text=""
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

                <TextView
                    android:id="@+id/tv_isgoumai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x5"
                    android:gravity="end"
                    android:text="未购买产品"
                    android:textColor="@color/text333"
                    android:textSize="@dimen/x13" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
