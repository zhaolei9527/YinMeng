<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgfff"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x42"
        android:background="@color/bgfff"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@mipmap/fanhui" />

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="修改密码"
            android:textColor="@color/text000"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="@dimen/x290"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x12"
            android:background="@color/bgfff"
            android:paddingLeft="@dimen/x10">


            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@mipmap/oldpsw" />

            <EditText
                android:id="@+id/et_oldpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y33"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x22"
                android:background="@null"
                android:hint="原密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#999" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#efefef"></View>

        <RelativeLayout
            android:layout_width="@dimen/x290"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x12"
            android:background="@color/bgfff"
            android:paddingLeft="@dimen/x10">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@mipmap/newpsw" />

            <EditText
                android:id="@+id/et_newpassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y33"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x22"
                android:background="@null"
                android:hint="新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#999" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#efefef"></View>

        <RelativeLayout
            android:layout_width="@dimen/x290"
            android:layout_height="@dimen/y33"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x12"
            android:background="@color/bgfff"
            android:paddingLeft="@dimen/x10">


            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x16"
                android:layout_centerVertical="true"
                android:background="@mipmap/newpsw" />

            <EditText
                android:id="@+id/et_newpasswordagain"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y33"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x22"
                android:background="@null"
                android:hint="确认新密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textColorHint="#999" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#efefef">

        </View>

    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="@dimen/x250"
        android:layout_height="@dimen/y30"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x76"
        android:background="@drawable/btn_add_address_selector"
        android:text="提交修改"
        android:textColor="@android:color/white"
        android:textSize="@dimen/x20" />

</LinearLayout>
