<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y13">

            <TextView
                android:id="@+id/tv_order_form_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-09-12 16：49：10"
                android:textColor="#777"
                android:textSize="@dimen/x12" />

            <TextView
                android:id="@+id/tv_order_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="待收货"
                android:textColor="#777"
                android:textSize="@dimen/x12" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_oreders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/tv_order_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y13"
            android:gravity="end"
            android:text="共2件商品 合计：199.80（含运费¥20.00）"
            android:textSize="@dimen/x12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginTop="@dimen/x5"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_pay_order"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/bg_login"
                android:text="立即支付"
                android:textColor="#fff"
                android:textSize="@dimen/x11"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_delete_order"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/bg_login"
                android:text="取消订单"
                android:textColor="@color/bgfff"
                android:textSize="@dimen/x11"
                android:visibility="gone" />


            <Button
                android:id="@+id/btn_isget_order"
                android:layout_width="@dimen/x75"
                android:layout_height="@dimen/y25"
                android:layout_marginRight="@dimen/x5"
                android:background="@drawable/bg_login"
                android:text="确认收货"
                android:textColor="#fff"
                android:textSize="@dimen/x11"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#efefef"></View>
</LinearLayout>
